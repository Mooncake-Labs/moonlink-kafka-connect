{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "ClusterConnect",
        "Effect": "Allow",
        "Action": [
          "kafka-cluster:Connect",
          "kafka-cluster:DescribeCluster"
        ],
        "Resource": [
          "<YOUR_CLUSTER_ARN>"
        ]
      },
      {
        "Sid": "WriteToDataTopicsWildcard",
        "Effect": "Allow",
        "Action": [
          "kafka-cluster:DescribeTopic",
          "kafka-cluster:WriteData"
        ],
        "Resource": [
          "<YOUR_CLUSTER_ARN>/*"                // or <YOUR_CLUSTER_ARN>/<PREFIX-*>
        ]
      },
      {
        "Sid": "ConnectInternalTopics",
        "Effect": "Allow",
        "Action": [
          "kafka-cluster:DescribeTopic",
          "kafka-cluster:ReadData",
          "kafka-cluster:WriteData",
          "kafka-cluster:CreateTopic"           // only for Connectâ€™s internal topics
        ],
        "Resource": [
          "<YOUR_CLUSTER_ARN>/__amazon_msk_connect_*"
        ]
      },
      {
        "Sid": "ConsumerGroupsForConnect",
        "Effect": "Allow",
        "Action": [
          "kafka-cluster:DescribeGroup",
          "kafka-cluster:AlterGroup"
        ],
        "Resource": [
          "<YOUR_CLUSTER_ARN>/connect-*",       // default MSK Connect prefix
          "<YOUR_CLUSTER_ARN>/__amazon_msk_connect_*"
        ]
      }
    ]
  }