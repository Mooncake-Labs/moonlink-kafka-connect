{
  "is_local_execution": false,
  "uris": {
    "moonlink": "http://ec2-<ip-address>.compute-1.amazonaws.com:3030",
    "schema_registry": "http://<ip-address>:8081"
  },
  "artifacts": {
    "s3": {
      "bucket": "your-bucket-name-for-uploading-connect-jars",
      "region": "us-east-1",
      "access_key_id": "your_key",
      "secret_access_key": "your_secret",
      "prefix": "msk-plugins/"
    }
  },
  "local_moonlink": {
    "data_dir": "./moonlink_data",
    "build": {
      "features": ["storage-s3"],
      "release": false
    },
    "run": {
      "debug": false,
      "args": ["--no-tcp-api", "-p", "3030"],
      "out_log_path": "moonlink_service.log",
      "wipe_data_dir": false
    }
  },
  "source": {
    "connector_name": "example-source-connector",
    "tasks_max": 1,
    "messages_per_second": 10,
    "message_size_bytes": 200,
    "run_indefinitely": false,
    "max_duration_seconds": 60,
    "output_topic": "source-1",
    "partitions": 1
  },
  "sink": {
    "connector_name": "moonlink-sink-connector",
    "tasks_max": 1
  },
  "table": {
    "database": "test_db",
    "name": "test_table_15",
    "should_recreate_on_start": true,
    "drop_table_on_completion": false,
    "avro_schema": {
      "type": "record",
      "name": "TestRecord",
      "namespace": "moonlink",
      "fields": [
        { "name": "string_column", "type": "string" },
        { "name": "numeric_column", "type": "int" },
        { "name": "boolean_column", "type": ["null", "boolean"], "default": null }
      ]
    },
    "storage": {
      "s3": {
        "bucket": "testing-kafka-local",
        "region": "us-east-1",
        "access_key_id": "your_key",
        "secret_access_key": "your_secret",
        "endpoint": null
      }
    }
  },
  "profiling": {
    "csv_path": "lsn_snapshot_latency.csv",
    "log_path": "profiling_prints.log"
  }
}
